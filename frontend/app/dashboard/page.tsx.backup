                        <div className="flex flex-wrap items-start justify-between gap-4">
                          <div className="space-y-1">
                            <p className="text-base font-semibold text-slate-900">{item.name}</p>
                            <p className="text-xs uppercase tracking-widest text-slate-500">{item.ticker}</p>
                            <div className="flex flex-wrap gap-2 text-xs text-slate-500">
                              <span className="rounded-full border border-slate-200 px-3 py-1">
                                {itemRating.grade} · {itemRating.label}
                              </span>
                              <span className="rounded-full border border-slate-200 px-3 py-1">{relativeTime(item.generatedAt)}</span>
                            </div>
                          </div>
                          <div
                            className={`rounded-full px-4 py-1 text-xs font-semibold ${
                              isPinned ? 'bg-indigo-50 text-indigo-600 border border-indigo-100' : 'bg-white text-slate-500 border border-slate-200'
                            }`}
                          >
                            {isPinned ? 'Pinned' : 'Pin from summary view'}
                          </div>
                        </div>
                        {item.summaryPreview && (
                          <button
                            type="button"
                            onClick={() => handleOpenBrief(item)}
                            className="mt-3 w-full text-left text-sm text-slate-600 hover:text-slate-900"
                          >
                            {item.summaryPreview}
                          </button>
                        )}
                      </li>
                    )
                  })}
                </ul>
              ) : (
                <div className="mt-6 rounded-2xl border border-dashed border-slate-200 bg-slate-50 p-6 text-center text-slate-500">
                  Your most recent AI briefs will show up here once you run an analysis.
                </div>
              )}
            </div>
          </motion.section>
        </main>
      </div>
    </div>
  )
}

